<testCases>
	<testCase>
        <description>user1 uploads a text file</description>
        <url>/sharebox/api/upload</url>
        <requestMethod>POST</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
        </parameters>
        <multipartFormData>src/test/resources/testfiles/testfile6.txt</multipartFormData>
        <expectedStatusCode>200</expectedStatusCode>
    </testCase>
    <testCase>
        <description>user1 updates the text file</description>
        <url>/sharebox/api/upload</url>
        <requestMethod>PUT</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
        </parameters>
        <formData>
        </formData>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>
        {"message": "Bytes has been updated successfully"}
        </expectedResponse>
    </testCase>
    <testCase>
        <description>user1 share files to user 2</description>
        <url>/sharebox/api/files</url>
        <requestMethod>POST</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
        </parameters>
        <formData>
        	<entry>
        		<key>fileId</key>
        		<value></value>
        	</entry>
        	<entry>
        		<key>shareTo</key>
        		<value>#user2Id</value>
        	</entry>
        </formData>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>
        {"message": "Successfully Shared"}
        </expectedResponse>
    </testCase>
    <testCase>
        <description>user2 accepts shared files</description>
        <url>/sharebox/api/files</url>
        <requestMethod>PUT</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
        </parameters>
        <formData>
        	<entry>
        		<key>fileId</key>
        		<value></value>
        	</entry>
        	<entry>
        		<key>isAccepted</key>
        		<value>true</value>
        	</entry>
        </formData>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>
        {
		  "message": "Updated Successfully."
		}
        </expectedResponse>
    </testCase>
    <testCase>
        <description>user2 attempts to delete the file</description>
        <url>/sharebox/api/files</url>
        <requestMethod>DELETE</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
        </parameters>
        <formData>
            <entry>
                <key>fileId</key>
                <value></value>
            </entry>
        </formData>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedFields>
        	<entry>
                <key>error</key>
                <value>NOT_NULL</value>
            </entry>
        </expectedFields>
    </testCase>
    <testCase>
        <description>get share files for user2 after delete attempt</description>
        <url>/sharebox/api/files</url>
        <requestMethod>GET</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
        </parameters>
        <expectedStatusCode>200</expectedStatusCode>
    </testCase>
    <testCase>
        <description>get share files for user1 after delete attempt</description>
        <url>/sharebox/api/files</url>
        <requestMethod>GET</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
            <entry>
                <key>getSharedFiles</key>
                <value>true</value>
            </entry>
        </parameters>
        <expectedStatusCode>200</expectedStatusCode>
    </testCase>
</testCases>