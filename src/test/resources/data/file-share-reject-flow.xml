<testCases>    
	<testCase>
        <description>upload a file</description>
        <url>/sharebox/api/upload</url>
        <requestMethod>POST</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
        </parameters>
        <multipartFormData>src/test/resources/testfiles/testfile3.txt</multipartFormData>
        <expectedStatusCode>200</expectedStatusCode>
    </testCase>
    <testCase>
        <description>get share files for user 1</description>
        <url>/sharebox/api/files</url>
        <requestMethod>GET</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
        </parameters>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>[]</expectedResponse>
    </testCase>
    <testCase>
        <description>user1 share files to user 2</description>
        <url>/sharebox/api/files</url>
        <requestMethod>POST</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user1Token</value>
            </entry>
        </parameters>
        <formData>
        	<entry>
        		<key>fileId</key>
        		<value></value>
        	</entry>
        	<entry>
        		<key>shareTo</key>
        		<value>#user2Id</value>
        	</entry>
        </formData>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>
        {"message": "Successfully Shared"}
        </expectedResponse>
    </testCase>
    <testCase>
        <description>get share files for user 2 before accepting</description>
        <url>/sharebox/api/files</url>
        <requestMethod>GET</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
        </parameters>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>[]</expectedResponse>
    </testCase>
    <testCase>
        <description>user2 reject shared files</description>
        <url>/sharebox/api/files</url>
        <requestMethod>PUT</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
        </parameters>
        <formData>
        	<entry>
        		<key>fileId</key>
        		<value></value>
        	</entry>
        	<entry>
        		<key>isAccepted</key>
        		<value>false</value>
        	</entry>
        </formData>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>
        {
		  "message": "Updated Successfully."
		}
        </expectedResponse>
    </testCase>
    <testCase>
        <description>get share files for user 2 after rejecting</description>
        <url>/sharebox/api/files</url>
        <requestMethod>GET</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
            <entry>
            	<key>getSharedFiles</key>
            	<value>true</value>
            </entry>
        </parameters>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>[]</expectedResponse>
    </testCase>
    <testCase>
        <description>get files for user 2 after rejecting with getSharedFiles false</description>
        <url>/sharebox/api/files</url>
        <requestMethod>GET</requestMethod>
        <headers>
	        <entry>
	            <key>Accept</key>
	            <value>application/json</value>
	        </entry>
    	</headers>
        <parameters>
            <entry>
                <key>token</key>
                <value>#user2Token</value>
            </entry>
            <entry>
            	<key>getSharedFiles</key>
            	<value>false</value>
            </entry>
        </parameters>
        <expectedStatusCode>200</expectedStatusCode>
        <expectedResponse>
        </expectedResponse>
    </testCase>
</testCases>